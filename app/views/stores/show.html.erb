<h1><%= @store.name %></h1>

<p>
  <strong>Intro:</strong>
  <%= @store.intro %>
</p>

<p>
  <strong>Address:</strong>
  <%= @store.address %>
</p>

<p>
  <strong>Tel:</strong>
  <%= @store.tel %>
</p>

<p>
  <strong>Business time:</strong>
  <%= @store.business_time %>
</p>
<h2>show all products</h2>
<table class="table">
  <thead>
    <tr>
      <th>name</th>
      <th>price</th>
      <th>action</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td ><%=product.name %></td>
      <td><%=product.price %></td>
      <td></td>
    </tr>
    <% end%>
  </tbody>
</table>


<h2>add a new products</h2>
<%= form_with(model: @product) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  
    <%= form.hidden_field :store_id %>
 

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

